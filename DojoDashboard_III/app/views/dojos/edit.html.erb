<h1>Edit a Dojo</h1>
<form action="/dojos/<%= @dojo.id %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type= "hidden" name="_method" value="patch">
    <input type="text" name="branch" value="<%= @dojo.branch %>">
    <input type="text" name="street" value="<%= @dojo.street %>">
    <input type="text" name="city" value="<%= @dojo.city %>">
    <input type="text" name="state" value="<%= @dojo.state %>">
    <input type='submit' value='Update'>     
</form>

<% if flash[:alert] %>
    <% flash[:alert].each do |x| %>
    <p class="text-danger text-center"><%= x %></p>
    <% end %>
<% end %>


<a href="/dojos"><button>Dojo Home</button></a>

